%h4{ class: 'page-header' }= t('label.platform_credential.single')

.row

  - if !credential.nil?
    %div{ class: 'col-sm-offset-1 col-md-offset-1 col-sm-10 col-md-10', style: 'margin-bottom: 10px;' }
      = zero_clipboard_button_for('public_key')
      %span{ style: 'margin-left: 10px;' }= t('label.platform_credential.desc') + ' :'

    %div{ class: 'col-sm-offset-1 col-md-offset-1 col-sm-10 col-md-10' }= text_area_tag :public_key, credential.public_key, disabled: true, rows: '5', class: 'public_key'

  - else

    %div{ class: 'col-sm-12' }
      .alert{ class: 'alert-info dont-dismiss' }= t('label.platform_credential.none_defined')
