.panel{ class: 'panel-default' }
  .panel-heading= label
  .panel-body
    %table{ class: 'table table-hover' }
      %thead
        %tr
          %th= t('label.identifier')
          %th= t('label.user.firstname')
          %th= t('label.user.lastname')
          %th= t('label.user.email_address')
          %th= t('label.user.last_connection')

          %th

      %tbody
        - users.each do |user|
          %tr
            %td= link_to user.login, edit_admin_user_path(user)
            %td= user.firstname
            %td= user.lastname
            %td= user.email
            %td= user.last_connection

            %td= button_delete admin_user_path(user), class: 'btn-sm' unless user.id == 1
