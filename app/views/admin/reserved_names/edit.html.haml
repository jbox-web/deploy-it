- html_title t('label.reserved_name.plural'), @reserved_name

.row
  %div{ class: 'col-md-offset-1 col-md-10' }

    %h3{ class: 'page-header' }= render_crumbs

    = bootstrap_form_for @reserved_name,
                         layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-4 col-md-4",
                         url:    admin_reserved_name_path(@reserved_name),
                         html:   { method: :patch } do |f|

      = render partial: 'form', locals: { f: f }

      .form-group
        %div{ class: 'col-sm-offset-2 col-sm-4' }
          = button_submit t('button.update')
          = button_cancel admin_reserved_names_path
