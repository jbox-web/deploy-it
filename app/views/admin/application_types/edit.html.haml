- html_title t('label.application_type.plural'), @application_type

.row
  %div{ class: 'col-md-offset-1 col-md-10' }

    %h3{ class: 'page-header' }= render_crumbs

    = bootstrap_form_for @application_type,
                         layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-4 col-md-4",
                         url:    admin_application_type_path(@application_type),
                         html:   { method: :patch } do |f|

      = render 'form', f: f

      .form-group
        %div{ class: 'col-sm-offset-2 col-sm-4' }
          = button_submit t('button.update')
          = button_cancel admin_application_types_path
