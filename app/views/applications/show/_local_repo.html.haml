%div{ class: 'col-md-6' }

  %h4{ class: 'page-header' }= label_with_icon(t('.title'), 'fa-cloud-upload', fixed: true)

  %dl{ class: 'dl-horizontal' }

    %dt= Repository.human_attribute_name('url') + ' :'
    %dd= repository.git_url

    %dt= t('.state') + ' :'
    %dd

    %dt= t('.last_commit') + ' :'
    %dd
      - if repository.empty?
        = t('.empty')
      - else
        = t('.commit_id') + ' : '
        = repository.last_commit
        %br
        = t('.commit_date') + ' : '
        = l(repository.last_commit_date) rescue ''
        %br
        = t('.commit_author') + ' : '
        = mail_to repository.last_commit_author_mail, repository.last_commit_author_name
        %br
        = t('.commit_message') + ' : '
        = repository.last_commit_message
