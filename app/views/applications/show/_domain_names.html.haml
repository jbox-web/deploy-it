%div{ class: 'col-md-12' }

%hr

%h4{ class: 'page-header' }= label_with_icon(t('label.domain_name.plural'), 'fa-random', fixed: true)

- if application.domain_names.any?
  .row
    %div{ class: 'col-md-6' }

      %ul{ class: 'list-group' }
        %li{ class: 'list-group-item' }= t('label.domain_name.aliases')
        - if application.domain_aliases.any?
          %ul{ class: 'list-group' }
            - application.domain_aliases.each do |domain_alias|
              %li{ class: 'list-group-item' }
                %span{ class: 'mount-point' }= link_to_external domain_alias.domain_name

    %div{ class: 'col-md-6' }

      %ul{ class: 'list-group' }
        %li{ class: 'list-group-item' }= t('label.domain_name.redirects')
        - if application.domain_redirects.any?
          %ul{ class: 'list-group' }
            - application.domain_redirects.each do |domain_redirect|
              %li{ class: 'list-group-item' }
                %span{ class: 'mount-point' }= link_to_external domain_redirect.domain_name

- else
  .alert{ class: 'alert-info dont-dismiss' }= t('label.domain_name.none_defined')
