%h4{ class: 'page-header' }
  = link_to_if can?(:edit_application, application), label_with_icon(get_model_name_for('ApplicationCredential'), 'fa-eye', fixed: true), credentials_application_path(application)

- if application.credentials.any?
  %ul{ class: 'list-group' }
    - application.credentials.each do |cred|
      %li{ class: 'list-group-item' }
        %span{ class: 'mount-point' }= render_credential(cred)

- else
  = render_no_data
