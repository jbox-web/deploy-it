- html_title t('.forgot_password')

.container-fluid
  .row-fluid
    %div{ class: 'col-sm-5 col-sm-offset-4 col-md-4 col-md-offset-4' }

      %h3{ class: 'page-header' }= label_with_icon(t('.forgot_password'), 'fa-mail', fixed: true)

      = bootstrap_form_for resource,
                           as:   resource_name,
                           url:  password_path(resource_name),
                           html: { method: :post } do |f|

        = f.email_field :email, autofocus: true
        = f.submit t('.reset_password_instructions'), class: 'btn btn-primary'
