<% if saved %>
$('#mainModal').modal('hide');
<%= js_render_partial('#application-content', 'applications_config/partials/addons', locals: { application: application }) %>
<%= render_flash_messages_as_js('#addons .flash-messages') %>
highlight('#addons fieldset > legend');
<% else %>
<%= js_render_partial('#new_application_addon', 'applications_config/partials/add_addon', method: :replace, locals: { application: application, addon: addon }) %>
<%= render_flash_messages_as_js('#new_application_addon .flash-messages') %>
<% end %>
